{% extends 'base.html.twig' %}

{% block title %}Liste des participants - {{ conference.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Liste des participants</h1>
                <h4 class="text-muted">{{ conference.title }}</h4>
            </div>
            <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la conférence
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Date d'inscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for participant in participants %}
                                <tr>
                                    <td>{{ participant.name }}</td>
                                    <td>{{ participant.email }}</td>
                                    <td>{{ participant.id|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <form method="post" action="{{ path('app_participant_delete', {'id': participant.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce participant ?');" style="display: inline-block">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                                            <button class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucun participant inscrit</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="fas fa-users"></i> {{ participants|length }}/{{ conference.maxCapacity }} participants inscrits
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 