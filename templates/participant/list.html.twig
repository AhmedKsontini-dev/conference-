{% extends 'base.html.twig' %}

{% block title %}Liste des participants - {{ conference.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #6c63ff;
            --secondary-color: #4a45b1;
            --accent-color: #ff6b6b;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --dark-color: #2d3436;
            --light-color: #f8f9fa;
            --card-bg: #ffffff;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            padding: 2rem 0;
            border-radius: 15px;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
            margin-top: 100px;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
            z-index: 1;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            margin-bottom: 2rem;
            background: var(--card-bg);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table thead th {
            border-bottom: 2px solid #e9ecef;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            color: #6c757d;
            background-color: #f8f9fa;
            padding: 1rem 1.5rem;
        }

        .table tbody tr {
            transition: var(--transition);
        }

        .table tbody tr:hover {
            background-color: rgba(108, 99, 255, 0.05);
        }

        .table tbody td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            border-top: 1px solid #f1f1f1;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            border: none;
        }

        .btn i {
            font-size: 0.9em;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            color: white;
        }

        .btn-danger {
            background-color: var(--accent-color);
        }

        .btn-danger:hover {
            background-color: #e04f5f;
            transform: translateY(-2px);
        }

        .alert {
            border: none;
            border-radius: 10px;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }

        .alert i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }

        .empty-state {
            padding: 3rem 1rem;
            text-align: center;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }

        .participant-count {
            background: white;
            padding: 1rem 1.5rem;
            border-radius: 10px;
            box-shadow: var(--shadow);
            font-weight: 600;
            color: var(--dark-color);
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .participant-count i {
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        .progress {
            height: 8px;
            border-radius: 4px;
            margin-top: 1rem;
            background-color: #e9ecef;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            transition: width 0.6s ease;
        }

        .badge {
            font-weight: 500;
            padding: 0.4em 0.8em;
            font-size: 0.8em;
            border-radius: 50px;
        }

        .badge-primary {
            background-color: var(--primary-color);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="hero-section">
            <div class="container position-relative" style="z-index: 2;">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <h1 class="h2 mb-1 text-white">
                            <i class="fas fa-users me-2"></i>
                            Liste des participants
                        </h1>
                        <p class="mb-0 text-white-50">{{ conference.title }}</p>
                    </div>
                    <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la conférence
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                <div>{{ message }}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Carte principale -->
        <div class="card">
            <div class="card-body p-0">
                {% if participants|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Date d'inscription</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for participant in participants %}
                                    <tr>
                                        <td class="fw-medium">{{ participant.name }}</td>
                                        <td>{{ participant.email }}</td>
                                        <td>{{ participant.id|date('d/m/Y H:i') }}</td>
                                        <td class="text-end">
                                            <form method="post" 
                                                  action="{{ path('app_participant_delete', {'id': participant.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce participant ?');" 
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                                                <button class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-users-slash"></i>
                        <h4 class="h5">Aucun participant inscrit</h4>
                        <p class="text-muted mb-0">Aucun participant n'est encore inscrit à cette conférence.</p>
                    </div>
                {% endif %}

                <!-- Compteur de participants -->
                <div class="d-flex justify-content-between align-items-center p-4 border-top">
                    <div class="participant-count">
                        <i class="fas fa-users"></i>
                        <div>
                            <span>{{ participants|length }}/{{ conference.maxCapacity }} participants inscrits</span>
                            <div class="progress mt-2" style="width: 200px;">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: {{ (participants|length / conference.maxCapacity * 100)|round(2) }}%" 
                                     aria-valuenow="{{ participants|length }}" 
                                     aria-valuemin="0" 
                                     aria-valuemax="{{ conference.maxCapacity }}">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {% set remaining = conference.maxCapacity - participants|length %}
                    {% if remaining <= 0 %}
                        <div class="text-danger fw-bold">
                            <i class="fas fa-exclamation-circle me-1"></i> Capacité maximale atteinte
                        </div>
                    {% else %}
                        <div class="text-muted">
                            <i class="fas fa-ticket-alt me-1"></i> {{ remaining }} places restantes
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 