{% extends 'base.html.twig' %}

{% block title %}Modifier la Conférence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #6c63ff;
            --secondary-color: #4a45b1;
            --accent-color: #ff6b6b;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --dark-color: #2d3436;
            --light-color: #f8f9fa;
            --card-bg: #ffffff;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
           
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
           
            border-radius: 15px;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
            z-index: 1;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            margin-bottom: 2rem;
            background: var(--card-bg);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-bottom: none;
            padding: 1.5rem 2rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
            transition: var(--transition);
            width: 100%;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(108, 99, 255, 0.15);
            outline: none;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #e0e0e0;
            border-right: none;
            border-radius: 8px 0 0 8px;
        }

        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn {
            padding: 0.7rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            border: none;
        }

        .btn i {
            font-size: 0.9em;
        }

        .btn-primary {
            background-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #5a52d4;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            color: white;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-info:hover {
            background-color: #138496;
            transform: translateY(-2px);
            color: white;
        }

        .form-errors {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .participant-count {
            background-color: #f8f9fa;
            border-left: 4px solid var(--primary-color);
            padding: 0.75rem 1rem;
            border-radius: 0 8px 8px 0;
            margin: 1rem 0;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .participant-count i {
            color: var(--primary-color);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="hero-section">
            <div class="container position-relative" style="z-index: 2;">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <h1 class="h2 mb-1 text-white">
                            <i class="fas fa-edit me-2"></i>
                            Modifier la conférence
                        </h1>
                        <p class="mb-0 text-white-50">Mettez à jour les informations de la conférence</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye me-2"></i> Voir les détails
                        </a>
                        <a href="{{ path('app_conference_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h4 mb-0 text-white">
                            <i class="fas fa-calendar-edit me-2"></i>
                            Informations de la conférence
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row g-4">
                                <div class="col-12">
                                    <div class="form-group">
                                        {{ form_label(form.title, 'Titre de la conférence', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                            {{ form_widget(form.title, {
                                                'attr': {
                                                    'class': 'form-control' ~ (form.title.vars.errors|length ? ' is-invalid' : ''),
                                                    'placeholder': 'Ex: Conférence sur la technologie'
                                                }
                                            }) }}
                                        </div>
                                        <div class="form-errors">
                                            {{ form_errors(form.title) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                            {{ form_widget(form.location, {
                                                'attr': {
                                                    'class': 'form-control' ~ (form.location.vars.errors|length ? ' is-invalid' : ''),
                                                    'placeholder': 'Ex: Paris, France'
                                                }
                                            }) }}
                                        </div>
                                        <div class="form-errors">
                                            {{ form_errors(form.location) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.date, 'Date et heure', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                            {{ form_widget(form.date, {
                                                'attr': {
                                                    'class': 'form-control' ~ (form.date.vars.errors|length ? ' is-invalid' : '')
                                                }
                                            }) }}
                                        </div>
                                        <div class="form-errors">
                                            {{ form_errors(form.date) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.maxCapacity, 'Capacité maximale', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                                            {{ form_widget(form.maxCapacity, {
                                                'attr': {
                                                    'class': 'form-control' ~ (form.maxCapacity.vars.errors|length ? ' is-invalid' : ''),
                                                    'min': conference.participants|length,
                                                    'placeholder': '50'
                                                }
                                            }) }}
                                        </div>
                                        <div class="form-errors">
                                            {{ form_errors(form.maxCapacity) }}
                                        </div>
                                        <div class="participant-count">
                                            <i class="fas fa-user-check"></i>
                                            <span>{{ conference.participants|length }} participants déjà inscrits</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pt-3 border-top mt-4">
                                <a href="{{ path('app_conference_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i> Annuler
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i> Enregistrer les modifications
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
