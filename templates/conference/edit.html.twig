{% extends 'base.html.twig' %}

{% block title %}Modifier la Conférence{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="card-title">
                                <i class="fas fa-edit me-2"></i>Modifier la Conférence
                            </h1>
                            <div>
                                <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-info me-2">
                                    <i class="fas fa-eye me-2"></i>Voir les détails
                                </a>
                                <a href="{{ path('app_conference_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                                </a>
                            </div>
                        </div>

                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_label(form.title) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.title) }}
                                </div>

                                <div class="col-md-12 mb-3">
                                    {{ form_label(form.location) }}
                                    {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.location) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.date) }}
                                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.date) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.maxCapacity) }}
                                    {{ form_widget(form.maxCapacity, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.maxCapacity) }}
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        {{ conference.participants|length }} participants actuellement inscrits
                                    </small>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
