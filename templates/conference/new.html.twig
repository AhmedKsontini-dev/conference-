{% extends 'base.html.twig' %}

{% block title %}Nouvelle Conférence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #6c63ff;
            --secondary-color: #4a45b1;
            --accent-color: #ff6b6b;
            --dark-color: #2d3436;
            --light-color: #f8f9fa;
            --card-bg: #ffffff;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
           
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            padding: 40px 0;
            border-radius: 15px;
            margin-bottom: 40px;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
            margin-top: 100px;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
            z-index: 1;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            position: relative;
            z-index: 2;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 2;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            animation: fadeIn 0.6s ease-out;
            margin-top: 100px;
        }

        .form-card {
            background: var(--card-bg);
            border-radius: 15px;
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: var(--transition);
            border: none;
        }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .form-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1.5rem 2rem;
            position: relative;
            overflow: hidden;
        }

        .form-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .form-title i {
            margin-right: 12px;
            font-size: 1.5rem;
        }

        .form-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.8rem;
            display: block;
            color: var(--dark-color);
            font-size: 1rem;
        }

        .input-group {
            position: relative;
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 45px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 5;
            border-radius: 8px 0 0 8px;
        }

        .form-control {
            padding: 0.75rem 1rem 0.75rem 3.5rem;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            width: 100%;
            transition: var(--transition);
            font-size: 0.95rem;
            height: auto;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(108, 99, 255, 0.25);
            outline: none;
        }

        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
        }

        .form-text i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }

        .btn {
            padding: 0.8rem 2rem;
            border-radius: 50px;
            font-weight: 500;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            position: relative;
            overflow: hidden;
            border: none;
            cursor: pointer;
            font-size: 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 99, 255, 0.4);
        }

        .btn-outline-primary {
            background: transparent;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline-primary:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #eee;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Ripple effect */
        .ripple {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }

        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .form-body {
                padding: 1.5rem;
            }
            
            .hero-title {
                font-size: 2rem;
            }
            
            .form-actions {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="hero-section">
            <div class="container">
                <h1 class="hero-title">
                    <i class="fas fa-plus-circle me-2"></i>
                    Créer une Nouvelle Conférence
                </h1>
                <p class="hero-subtitle">Remplissez le formulaire ci-dessous pour organiser votre conférence</p>
            </div>
        </div>

        <div class="form-container">
            <div class="form-card">
                <div class="form-header">
                    <h2 class="form-title">
                        <i class="fas fa-calendar-plus"></i>
                        Détails de la conférence
                    </h2>
                </div>
                <div class="form-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(form.title, 'Titre de la conférence', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-heading"></i>
                                </span>
                                {{ form_widget(form.title, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Ex: Conférence sur le développement web',
                                        'required': 'required'
                                    }
                                }) }}
                            </div>
                            {{ form_errors(form.title) }}
                            <small class="form-text">
                                <i class="fas fa-info-circle"></i>
                                Donnez un titre clair et descriptif à votre conférence
                            </small>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.location, 'Lieu de la conférence', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                {{ form_widget(form.location, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Ex: Paris, France',
                                        'required': 'required'
                                    }
                                }) }}
                            </div>
                            {{ form_errors(form.location) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.date, 'Date et heure', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                        {{ form_widget(form.date, {
                                            'attr': {
                                                'class': 'form-control',
                                                'required': 'required'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(form.date) }}
                                    <small class="form-text">
                                        <i class="fas fa-info-circle"></i>
                                        La date doit être dans le futur
                                    </small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.maxCapacity, 'Capacité maximale', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-users"></i>
                                        </span>
                                        {{ form_widget(form.maxCapacity, {
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Ex: 100',
                                                'min': '1',
                                                'required': 'required'
                                            }
                                        }) }}
                                    </div>
                                    {{ form_errors(form.maxCapacity) }}
                                    <small class="form-text">
                                        <i class="fas fa-info-circle"></i>
                                        Nombre maximum de participants autorisés
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a href="{{ path('app_conference_index') }}" class="btn btn-outline-primary" id="backButton">
                                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitButton">
                                <i class="fas fa-plus-circle me-2"></i> Créer la conférence
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Ripple effect for buttons
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const ripple = document.createElement('span');
                    ripple.classList.add('ripple');
                    ripple.style.left = x + 'px';
                    ripple.style.top = y + 'px';
                    
                    this.appendChild(ripple);
                    
                    // Remove ripple after animation completes
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });

            // Form validation
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
{% endblock %}
