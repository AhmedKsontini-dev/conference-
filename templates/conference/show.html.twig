{% extends 'base.html.twig' %}

{% block title %}Détails de la conférence{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">{{ conference.title }}</h1>
                        
                        <div class="mb-4">
                            <p><strong><i class="fas fa-map-marker-alt"></i> Lieu :</strong> {{ conference.location }}</p>
                            <p><strong><i class="fas fa-calendar"></i> Date :</strong> {{ conference.date|date('d/m/Y H:i') }}</p>
                            <p><strong><i class="fas fa-users"></i> Capacité :</strong> {{ conference.participants|length }}/{{ conference.maxCapacity }} participants</p>
                        </div>

                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="mb-4">
                                <a href="{{ path('app_conference_edit', {'id': conference.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('app_participant_list', {'id': conference.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-list"></i> Liste des participants
                                </a>
                                {{ include('conference/_delete_form.html.twig') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Inscription</h3>
                        
                        {% if conference.participants|length >= conference.maxCapacity %}
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i> Cette conférence a atteint sa capacité maximale.
                            </div>
                        {% else %}
                            {{ form_start(form, {'action': path('app_participant_new', {'id': conference.id})}) }}
                                {{ form_widget(form) }}
                                <button type="submit" class="btn btn-primary mt-3">
                                    <i class="fas fa-user-plus"></i> S'inscrire
                                </button>
                            {{ form_end(form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger mt-3">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
