{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #6c63ff;
            --secondary-color: #4a45b1;
            --accent-color: #ff6b6b;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --dark-color: #2d3436;
            --light-color: #f8f9fa;
            --card-bg: #ffffff;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
         
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            padding: 2rem 0;
            border-radius: 15px;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
         margin-top: 100px;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
            z-index: 1;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            margin-bottom: 2rem;
            background: var(--card-bg);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            border-bottom: 2px solid #e9ecef;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            color: #6c757d;
            background-color: #f8f9fa;
        }

        .table tbody tr {
            transition: var(--transition);
        }

        .table tbody tr:hover {
            background-color: rgba(108, 99, 255, 0.05);
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn i {
            font-size: 0.9em;
        }

        .btn-warning {
            background-color: var(--warning-color);
            border: none;
            color: var(--dark-color);
        }

        .btn-warning:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
            color: var(--dark-color);
        }

        .btn-danger {
            background-color: var(--accent-color);
            border: none;
        }

        .btn-danger:hover {
            background-color: #e04f5f;
            transform: translateY(-2px);
        }

        .badge {
            font-weight: 500;
            padding: 0.4em 0.8em;
            border-radius: 50px;
            font-size: 0.8em;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge.bg-danger {
            background-color: #e74c3c !important;
        }

        .badge.bg-info {
            background-color: #3498db !important;
        }

        .alert {
            border: none;
            border-radius: 10px;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
        }

        .alert i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }

        .empty-state {
            padding: 3rem 1rem;
            text-align: center;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <!-- En-tête -->
        <div class="hero-section">
            <div class="container position-relative" style="z-index: 2;">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <h1 class="h2 mb-1 text-white">
                            <i class="fas fa-users me-2"></i>
                            Gestion des utilisateurs
                        </h1>
                        <p class="mb-0 text-white-50">Gérez les comptes utilisateurs et leurs permissions</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                <div>{{ message }}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                <div>{{ message }}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Carte principale -->
        <div class="card">
            <div class="card-body p-0">
                {% if users|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Rôles</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td class="fw-medium">#{{ user.id }}</td>
                                        <td class="text-nowrap">{{ user.email }}</td>
                                        <td>
                                            {% for role in user.roles %}
                                                <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'info' }} me-1">
                                                    <i class="fas fa-{{ role == 'ROLE_ADMIN' ? 'user-shield' : 'user' }} me-1"></i>
                                                    {{ role == 'ROLE_ADMIN' ? 'Administrateur' : 'Utilisateur' }}
                                                </span>
                                            {% endfor %}
                                        </td>
                                        <td class="text-end">
                                            <div class="action-buttons">
                                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                                                   class="btn btn-warning">
                                                    <i class="fas fa-edit"></i> Modifier
                                                </a>
                                                {% if user != app.user %}
                                                    <form method="post" 
                                                          action="{{ path('app_user_delete', {'id': user.id}) }}" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" 
                                                          class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                        <button class="btn btn-danger">
                                                            <i class="fas fa-trash"></i> Supprimer
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-user-slash"></i>
                        <h4 class="h5">Aucun utilisateur trouvé</h4>
                        <p class="text-muted mb-0">Aucun utilisateur n'est enregistré dans le système.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 